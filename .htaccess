# =====================================================
# CONFIGURAÇÕES APACHE - SISTEMA CFC
# =====================================================

# Habilitar rewrite engine
RewriteEngine On

# =====================================================
# EXCEÇÕES PWA - Permitir acesso direto ANTES do front controller
# =====================================================
# Permitir acesso direto ao pwa-manifest.php (PWA white-label)
RewriteRule ^pwa-manifest\.php$ - [L]

# Permitir acesso direto ao sw.js e sw.php (Service Worker PWA)
RewriteRule ^sw\.(js|php)$ - [L]

# Permitir acesso direto aos assets (garantir que assets/ sempre seja servido diretamente)
RewriteRule ^assets/ - [L]

# BLOQUEIO: /tools/ NÃO deve ser acessível via web (contém scripts administrativos)
# Acesso apenas via CLI. O .htaccess dentro de /tools/ também bloqueia.
RewriteRule ^tools/ - [F,L]
RewriteRule ^public_html/tools/ - [F,L]

# Se o arquivo/pasta existe fisicamente, NÃO reescreve (servir diretamente)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Configurações de segurança
<IfModule mod_headers.c>
    # Headers de segurança
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    
    # HSTS - Forçar HTTPS (crítico para reputação SSL em VPNs/antivírus)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Content Security Policy - Relaxado para CSS e scripts (MOBILE FIX)
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.google.com https://www.gstatic.com https://cdn.jsdelivr.net https://kit.fontawesome.com https://unpkg.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://kit.fontawesome.com *; font-src 'self' data: blob: https://fonts.gstatic.com https://cdnjs.cloudflare.com https://kit.fontawesome.com https://cdn.jsdelivr.net; img-src 'self' data: https:; connect-src 'self' https://viacep.com.br https://cdn.jsdelivr.net https://unpkg.com https://cdnjs.cloudflare.com; object-src 'none'; base-uri 'self';"
</IfModule>

# Configurações de cache
<IfModule mod_expires.c>
    ExpiresActive On
    
    # CSS e JS - Cache reduzido para mobile (MOBILE FIX)
    ExpiresByType text/css "access plus 1 hour"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Imagens
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/ico "access plus 1 month"
    ExpiresByType image/icon "access plus 1 month"
    ExpiresByType text/ico "access plus 1 month"
    ExpiresByType application/ico "access plus 1 month"
    
    # Fontes
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML
    ExpiresByType text/html "access plus 1 hour"
    
    # Outros
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType application/x-shockwave-flash "access plus 1 month"
</IfModule>

# Compressão GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Proteger arquivos sensíveis
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak|sql|conf|env|p12|pfx|pem)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order Allow,Deny
        Deny from all
    </IfModule>
</FilesMatch>

# Bloquear acesso direto ao deploy.php (webhook - contém shell_exec)
<Files "deploy.php">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order Allow,Deny
        Deny from all
    </IfModule>
</Files>

# Bloquear acesso a diretórios sensíveis
RewriteRule ^includes/ - [F,L]
RewriteRule ^config/ - [F,L]
RewriteRule ^logs/ - [F,L]
RewriteRule ^storage/.*\.(p12|pfx|pem|key)$ - [F,L]
RewriteRule ^certificados/ - [F,L]
RewriteRule ^admin/tools/ - [F,L]

# Bloquear scripts de debug/diagnóstico na raiz (informações sensíveis)
RewriteRule ^debug_.*\.php$ - [F,L]

# Impedir listagem de diretórios
Options -Indexes

# Proteger diretórios
# COMENTADO TEMPORARIAMENTE - pode estar causando erro 500
# <DirectoryMatch "^/.*/(includes|classes|logs|backups)/">
#     Order Allow,Deny
#     Deny from all
# </DirectoryMatch>

# Front Controller (só chega aqui se não for arquivo estático ou exceção PWA)
# Redirecionar tudo que não foi capturado pelas exceções acima para o index.php
RewriteRule ^ index.php [QSA,L]

# Redirecionar erros
ErrorDocument 404 /404.php
ErrorDocument 403 /403.php
ErrorDocument 500 /500.php

# Configurações de sessão seguras (necessário para reputação SSL/VPN scanners)
# Nota: session.cookie_secure é gerenciado pelo config.php (true apenas em produção)
php_value session.cookie_httponly 1
php_value session.use_strict_mode 1
php_value session.cookie_samesite "Lax"

# Configurações de upload
php_value upload_max_filesize 5M
php_value post_max_size 10M
php_value max_file_uploads 10
php_value max_execution_time 300
php_value memory_limit 256M

# Configurações de segurança PHP
php_flag expose_php Off
php_flag allow_url_fopen Off
php_flag allow_url_include Off
php_value max_input_vars 1000
php_value max_input_time 60
