# ==============================================
# PROTEÇÃO DO DIRETÓRIO /storage/
# Bloqueia acesso direto a arquivos sensíveis
# ==============================================

# Bloquear certificados e chaves privadas
<FilesMatch "\.(p12|pfx|pem|key|crt|cer)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# Bloquear arquivos de configuração e logs
<FilesMatch "\.(env|log|sql|bak|conf|ini)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>
