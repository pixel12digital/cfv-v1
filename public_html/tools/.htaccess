# ==============================================
# PROTEÇÃO DO DIRETÓRIO /public_html/tools/
# Bloqueia acesso público - apenas CLI permitido
# ==============================================

# Negar acesso a todos via HTTP
<IfModule mod_authz_core.c>
    # Apache 2.4+
    Require all denied
</IfModule>

<IfModule !mod_authz_core.c>
    # Apache 2.2
    Order deny,allow
    Deny from all
</IfModule>
