# ==============================================
# PROTEÇÃO DO DIRETÓRIO /app/
# Controllers e Services não devem ser acessados diretamente via HTTP
# ==============================================

<IfModule mod_authz_core.c>
    Require all denied
</IfModule>

<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
</IfModule>
